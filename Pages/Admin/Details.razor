@page "/admin/iphones/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
<tbody>
<tr><th>ID</th><td>@Iphone.IphoneID</td></tr>
<tr><th>Title</th><td>@Iphone.Title</td></tr>
<tr><th>Description</th><td>@Iphone.Description</td></tr>
<tr><th>Genre</th><td>@Iphone.Genre</td></tr>
<tr><th>Price</th><td>@Iphone.Price.ToString("C")</td></tr>
</tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/iphones">Back</NavLink>
@code {[Inject]
public IIphonesStoreRepository Repository { get; set; }
[Parameter]
public long Id { get; set; }
public Iphone Iphone { get; set; }
protected override void OnParametersSet()
{
Iphone = Repository.Iphones.FirstOrDefault(b => b.IphoneID == Id);
}
public string EditUrl => $"/admin/iphones/edit/{Iphone.IphoneID}";
}