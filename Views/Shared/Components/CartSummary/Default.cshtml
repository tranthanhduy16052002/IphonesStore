@model MyCart
<div class="">
@if (Model.Lines.Count() > 0)
{
<small class="navbar-text">
<b>Your cart: </b>
@if (Model.Lines.Sum(x => x.Quantity) >= 2)
{
<text>@Model.Lines.Sum(x => x.Quantity) iphones</text>
}
else
{
<text>@Model.Lines.Sum(x => x.Quantity) iphone</text>
}</small>
}
<a class="btn btn-sm btn-info navbar-btn" asp-page="/MyCart"
asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
<i class="fas fa-gift"></i>
</a>
</div>